{
    "name"              : "jbzoo/crosscms",
    "type"              : "library",
    "description"       : "Abstract library for Joomla and Wordpress CMS",
    "license"           : "MIT",
    "minimum-stability" : "stable",
    "keywords"          : ["cms", "joomla", "wordpress", "driver", "extension", "crosscms"],
    "authors"           : [
        {
            "name"  : "SmetDenis",
            "email" : "denis@jbzoo.com",
            "role"  : "lead"
        }
    ],
    "require"           : {
        "php"              : ">=5.4",
        "pimple/pimple"    : "^3.0",
        "jbzoo/sqlbuilder" : "^1.1",
        "jbzoo/data"       : "^1.4.1",
        "jbzoo/utils"      : "^1.7.2",
        "jbzoo/path"       : "^1.3",
        "jbzoo/event"      : "^1.2.1",
        "jbzoo/lang"       : "^1.0"

    },
    "require-dev"       : {
        "jbzoo/phpunit"       : "^1.7",
        "phpunit/phpcov"      : "^2.0.2",
        "joomlatools/console" : "^1.4",
        "wp-cli/wp-cli"       : "^0.21",
        "symfony/process"     : "^2.8",
        "symfony/console"     : "^2.8",
        "guzzlehttp/guzzle"   : "^5.3|^6.2"
    },
    "autoload"          : {
        "psr-4" : {
            "JBZoo\\CrossCMS\\" : "src"
        }
    },
    "autoload-dev"      : {
        "psr-4" : {
            "JBZoo\\PHPUnit\\" : "tests/classes"
        }
    },
    "extra"             : {
        "branch-alias" : {
            "dev-master" : "1.x-dev"
        }
    },
    "config"            : {
        "optimize-autoloader" : true
    },
    "support"           : {
        "issues" : "https://github.com/JBZoo/CrossCMS/issues"
    }
}
