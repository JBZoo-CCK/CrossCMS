{
    "name"              : "jbzoo/crosscms",
    "type"              : "library",
    "description"       : "Abstract library for Joomla and Wordpress CMS",
    "license"           : "MIT",
    "minimum-stability" : "stable",
    "keywords"          : ["cms", "joomla", "wordpress", "driver", "extension"],
    "authors"           : [
        {
            "name"  : "SmetDenis",
            "email" : "denis@jbzoo.com",
            "role"  : "lead"
        }
    ],
    "require"           : {
        "php"              : ">=5.3.10",
        "pimple/pimple"    : "^3.0",
        "jbzoo/data"       : "^1.0",
        "jbzoo/sqlbuilder" : "^1.1"
    },
    "require-dev"       : {
        "jbzoo/phpunit"       : "^1.0",
        "joomlatools/console" : "^1.4",
        "wp-cli/wp-cli"       : "^0.21"
    },
    "autoload"          : {
        "psr-4" : {
            "JBZoo\\CrossCMS\\" : "src"
        }
    },
    "extra"             : {
        "branch-alias" : {
            "dev-master" : "1.x-dev"
        }
    },
    "config"            : {
        "optimize-autoloader" : true
    },
    "scripts"           : {
        "test"       : [
            "@manifest",
            "@autoload",
            "@phpunit-j",
            "@phpunit-wp",
            "@phpmd",
            "@phpcs",
            "@phpcpd",
            "@phploc"
        ],
        "update-all" : [
            "composer self-update",
            "composer update"
        ],
        "manifest"   : "composer validate",
        "autoload"   : "composer dump-autoload --optimize --no-scripts",
        "phpunit-j"  : "php ./vendor/phpunit/phpunit/phpunit --configuration ./phpunit-joomla.xml.dist",
        "phpunit-wp" : "php ./vendor/phpunit/phpunit/phpunit --configuration ./phpunit-wordpress.xml.dist",
        "phpmd"      : "php ./vendor/phpmd/phpmd/src/bin/phpmd ./src text ./vendor/jbzoo/misc/phpmd/jbzoo.xml --verbose",
        "phpcs"      : "php ./vendor/squizlabs/php_codesniffer/scripts/phpcs ./src --standard=./vendor/jbzoo/misc/phpcs/JBZoo/ruleset.xml --report=full",
        "phpcpd"     : "php ./vendor/sebastian/phpcpd/phpcpd ./src --verbose",
        "phploc"     : "php ./vendor/phploc/phploc/phploc ./src --verbose",
        "coveralls"  : "php ./vendor/satooshi/php-coveralls/bin/coveralls --verbose"
    },
    "support"           : {
        "issues" : "https://github.com/JBZoo/CrossCMS/issues"
    }
}
